# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# 2 space indentation for YAML
[*.{yml,yaml}]
indent_size = 2

[*.{js,json}]
indent_size = 2

# 4 space indentation
[*.{py}]
indent_style = space
indent_size = 4

[*.md]
indent_size = 4
